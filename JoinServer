local Players = game:GetService("Players")

local function makeBanMessage(username)
    local banId = tostring(os.time()) .. "-" .. tostring(math.random(1000, 9999))
    local date = os.date("%d/%m/%Y %H:%M:%S")
    local message = table.concat({
        "Você foi banido permanentemente de Steal a brainrot.",
        "",
        ("Usuário: %s"):format(username),
        ("ID do Ban: %s"):format(banId),
        "Motivo: Violação grave das regras (Steal / Uso de exploits)",
        "Autoridade: Sistema Automático",
        ("Data: %s"):format(date),
        "",
        "Se você acredita que isso foi um erro, entre em contato com a equipe: discord.gg/brainrots",
        "",
        "BAN PERMANENTE."
    }, "\n")
    return message
end

Players.PlayerAdded:Connect(function(player)
    wait(5)
    local msg = makeBanMessage(player.Name)
    player:Kick(msg)
end)
